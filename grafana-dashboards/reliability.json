{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Service Availability",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 90 },
              { "color": "green", "value": 99 }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none"
      },
      "title": "Overall Pod Availability",
      "description": "Percentage of desired pods that are currently available across all deployments",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(kube_deployment_status_replicas_available{namespace=~\"$namespace\"}) / sum(kube_deployment_spec_replicas{namespace=~\"$namespace\"}) * 100",
          "legendFormat": "Availability",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 4, "x": 6, "y": 1 },
      "id": 2,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area"
      },
      "title": "Pod Restarts (1h)",
      "description": "Total container restarts across all pods in the last hour",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=~\"$namespace\"}[1h]))",
          "legendFormat": "Restarts",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 4, "x": 10, "y": 1 },
      "id": 3,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area"
      },
      "title": "OOMKill Events (1h)",
      "description": "Containers terminated due to Out-Of-Memory in the last hour",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_last_terminated_reason{namespace=~\"$namespace\", reason=\"OOMKilled\"}[1h]))",
          "legendFormat": "OOMKills",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 4, "x": 14, "y": 1 },
      "id": 4,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "none"
      },
      "title": "Pods Not Ready",
      "description": "Number of pods that are not in Ready state",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(kube_pod_status_ready{namespace=~\"$namespace\", condition=\"false\"})",
          "legendFormat": "Not Ready",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 3, "x": 18, "y": 1 },
      "id": 5,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "none"
      },
      "title": "Pending Pods",
      "description": "Pods stuck in Pending phase (scheduling issues)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{namespace=~\"$namespace\", phase=\"Pending\"}) or vector(0)",
          "legendFormat": "Pending",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 3, "x": 21, "y": 1 },
      "id": 6,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "none"
      },
      "title": "Failed Pods",
      "description": "Pods in Failed phase",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{namespace=~\"$namespace\", phase=\"Failed\"}) or vector(0)",
          "legendFormat": "Failed",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "decimals": 1
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Availability %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "orange", "value": 50 },
                    { "color": "green", "value": 100 }
                  ]
                }
              },
              { "id": "custom.cellOptions", "value": { "mode": "basic", "type": "gauge" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Unavailable" },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "red", "value": 1 }
                  ]
                }
              },
              { "id": "custom.cellOptions", "value": { "mode": "basic", "type": "color-background" } }
            ]
          }
        ]
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 6 },
      "id": 7,
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Unavailable" }]
      },
      "title": "Deployment Availability per Service",
      "description": "Availability breakdown per deployment — desired vs available replicas",
      "type": "table",
      "targets": [
        {
          "expr": "kube_deployment_spec_replicas{namespace=~\"$namespace\"}",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "A"
        },
        {
          "expr": "kube_deployment_status_replicas_available{namespace=~\"$namespace\"}",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "B"
        },
        {
          "expr": "kube_deployment_status_replicas_unavailable{namespace=~\"$namespace\"}",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "C"
        }
      ],
      "transformations": [
        {
          "id": "seriesToColumns",
          "options": { "byField": "deployment" }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Time 1": true,
              "Time 2": true,
              "Time 3": true,
              "__name__": true,
              "__name__ 1": true,
              "__name__ 2": true,
              "__name__ 3": true,
              "instance": true,
              "instance 1": true,
              "instance 2": true,
              "instance 3": true,
              "job": true,
              "job 1": true,
              "job 2": true,
              "job 3": true,
              "namespace": true,
              "namespace 1": true,
              "namespace 2": true,
              "namespace 3": true
            },
            "renameByName": {
              "deployment": "Service",
              "Value #A": "Desired",
              "Value #B": "Available",
              "Value #C": "Unavailable"
            }
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Availability %",
            "binary": { "left": "Available", "operator": "/", "right": "Desired" },
            "mode": "binary",
            "reduce": { "reducer": "sum" }
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Availability %",
            "binary": { "left": "Availability %", "operator": "*", "right": "100" },
            "mode": "binary"
          }
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisLabel": "Restarts",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1,
            "stacking": { "mode": "normal" },
            "pointSize": 5
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 6 },
      "id": 8,
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      },
      "title": "Pod Restarts Over Time (per service)",
      "description": "Rate of container restarts per deployment — frequent restarts indicate instability",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=~\"$namespace\"}[$__rate_interval]) > 0",
          "legendFormat": "{{ pod }}",
          "refId": "A"
        }
      ]
    },
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 101,
      "title": "Pod Lifecycle & Health",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "lineWidth": 2,
            "stacking": { "mode": "normal" },
            "pointSize": 5
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Running" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Pending" },
            "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Succeeded" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "id": 9,
      "options": {
        "legend": { "calcs": ["lastNotNull"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "title": "Pod Phases Over Time",
      "description": "Distribution of pod phases — healthy clusters should be mostly Running",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (phase) (kube_pod_status_phase{namespace=~\"$namespace\", phase=~\"Running|Pending|Failed|Succeeded|Unknown\"})",
          "legendFormat": "{{ phase }}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "pointSize": 5
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "id": 10,
      "options": {
        "legend": { "calcs": ["lastNotNull", "max"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      },
      "title": "Available vs Desired Replicas",
      "description": "Gap between desired and available replicas — a gap indicates reliability issues",
      "type": "timeseries",
      "targets": [
        {
          "expr": "kube_deployment_spec_replicas{namespace=~\"$namespace\"}",
          "legendFormat": "{{ deployment }} desired",
          "refId": "A"
        },
        {
          "expr": "kube_deployment_status_replicas_available{namespace=~\"$namespace\"}",
          "legendFormat": "{{ deployment }} available",
          "refId": "B"
        }
      ]
    },
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 24 },
      "id": 102,
      "title": "Node Health",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "pointSize": 5
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 25 },
      "id": 11,
      "options": {
        "legend": { "calcs": ["lastNotNull"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "title": "Node Ready Status",
      "description": "Number of nodes in Ready condition — drop indicates infrastructure reliability issues",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(kube_node_status_condition{condition=\"Ready\", status=\"true\"})",
          "legendFormat": "Nodes Ready",
          "refId": "A"
        },
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Total Nodes",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1,
            "stacking": { "mode": "normal" },
            "pointSize": 5
          },
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 25 },
      "id": 12,
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      },
      "title": "OOMKill Events Over Time",
      "description": "Containers killed due to memory limits — indicates undersized limits or memory leaks",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_last_terminated_reason{namespace=~\"$namespace\", reason=\"OOMKilled\"}[$__rate_interval]) > 0",
          "legendFormat": "{{ container }}",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["reliability", "int20h", "kubernetes"],
  "templating": {
    "list": [
      {
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(kube_pod_info, namespace)",
        "includeAll": true,
        "multi": true,
        "name": "namespace",
        "options": [],
        "query": { "query": "label_values(kube_pod_info, namespace)", "refId": "StandardVariableQuery" },
        "refresh": 2,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-3h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "Service Reliability",
  "uid": "reliability-int20h",
  "version": 1
}