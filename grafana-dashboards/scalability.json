        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "Cluster Memory Utilization",
      "description": "Total memory usage across all nodes as percentage of allocatable capacity",
      "type": "gauge",
      "targets": [
        {
          "expr": "(sum(node_memory_MemTotal_bytes) - sum(node_memory_MemAvailable_bytes)) / sum(kube_node_status_allocatable{resource=\"memory\"}) * 100",
          "legendFormat": "Memory %",
          "refId": "A"
        }
      ]
    },
    {
