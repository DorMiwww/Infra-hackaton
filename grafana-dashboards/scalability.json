        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "CPU Requests Saturation",
      "description": "How much of allocatable CPU is reserved by pod requests — high means no room to schedule more pods",
      "type": "gauge",
      "targets": [
        {
          "expr": "sum(kube_pod_container_resource_requests{resource=\"cpu\", namespace=~\"$namespace\"}) / sum(kube_node_status_allocatable{resource=\"cpu\"}) * 100",
          "legendFormat": "CPU Requests %",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
