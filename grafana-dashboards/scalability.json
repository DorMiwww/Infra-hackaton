        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "Memory Requests Saturation",
      "description": "How much of allocatable memory is reserved by pod requests — high means scaling is constrained",
      "type": "gauge",
      "targets": [
        {
          "expr": "sum(kube_pod_container_resource_requests{resource=\"memory\", namespace=~\"$namespace\"}) / sum(kube_node_status_allocatable{resource=\"memory\"}) * 100",
          "legendFormat": "Memory Requests %",
          "refId": "A"
        }
      ]
    },
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "id": 201,
      "title": "Per-Service Resource Saturation",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5,
            "spanNulls": true
          },
          "unit": "percent",
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
      "id": 5,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      },
      "title": "CPU Usage vs Requests (% per service)",
      "description": "How much of requested CPU each service actually uses — >100% means throttling, <10% means over-provisioned",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (container) (\n  rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\", container!=\"\", container!=\"POD\"}[5m])\n) \n/ \nsum by (container) (\n  kube_pod_container_resource_requests{namespace=~\"$namespace\", resource=\"cpu\", container!=\"\"}\n) * 100 > 0",
          "legendFormat": "{{ container }}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5,
            "spanNulls": true
          },
          "unit": "percent",
          "decimals": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
      "id": 6,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      },
      "title": "Memory Usage vs Limits (% per service)",
      "description": "How close to memory limits each service runs — approaching 100% risks OOMKill",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (container) (\n  container_memory_working_set_bytes{namespace=~\"$namespace\", container!=\"\", container!=\"POD\"}\n)\n/\nsum by (container) (\n  kube_pod_container_resource_limits{namespace=~\"$namespace\", resource=\"memory\", container!=\"\"}\n) * 100 > 0",
          "legendFormat": "{{ container }}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "decimals": 1
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "CPU Saturation %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "blue", "value": null },
                    { "color": "green", "value": 20 },
                    { "color": "orange", "value": 80 },
                    { "color": "red", "value": 100 }
                  ]
                }
              },
              { "id": "custom.cellOptions", "value": { "mode": "basic", "type": "gauge" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Memory Saturation %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "blue", "value": null },
                    { "color": "green", "value": 20 },
                    { "color": "orange", "value": 70 },
                    { "color": "red", "value": 90 }
                  ]
                }
              },
              { "id": "custom.cellOptions", "value": { "mode": "basic", "type": "gauge" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "CPU Used" },
            "properties": [{ "id": "unit", "value": "short" }, { "id": "decimals", "value": 3 }]
          },
          {
            "matcher": { "id": "byName", "options": "CPU Requested" },
            "properties": [{ "id": "unit", "value": "short" }, { "id": "decimals", "value": 3 }]
          },
          {
            "matcher": { "id": "byName", "options": "Memory Used" },
            "properties": [{ "id": "unit", "value": "bytes" }]
          },
          {
            "matcher": { "id": "byName", "options": "Memory Limit" },
            "properties": [{ "id": "unit", "value": "bytes" }]
          }
        ]
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 17 },
      "id": 7,
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "CPU Saturation %" }]
      },
      "title": "Resource Saturation Table (per service)",
      "description": "Which services are closest to their limits — the bottleneck for horizontal scaling",
      "type": "table",
      "targets": [
        {
          "expr": "sum by (container) (rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\", container!=\"\", container!=\"POD\"}[5m]))",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "A"
        },
        {
          "expr": "sum by (container) (kube_pod_container_resource_requests{namespace=~\"$namespace\", resource=\"cpu\", container!=\"\"})",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "B"
        },
        {
          "expr": "sum by (container) (container_memory_working_set_bytes{namespace=~\"$namespace\", container!=\"\", container!=\"POD\"})",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "C"
        },
        {
          "expr": "sum by (container) (kube_pod_container_resource_limits{namespace=~\"$namespace\", resource=\"memory\", container!=\"\"})",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "D"
        }
      ],
      "transformations": [
        {
          "id": "seriesToColumns",
          "options": { "byField": "container" }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Time 1": true,
              "Time 2": true,
              "Time 3": true,
              "Time 4": true
            },
            "renameByName": {
              "container": "Service",
              "Value #A": "CPU Used",
              "Value #B": "CPU Requested",
              "Value #C": "Memory Used",
              "Value #D": "Memory Limit"
            }
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "CPU Saturation %",
            "binary": { "left": "CPU Used", "operator": "/", "right": "CPU Requested" },
            "mode": "binary"
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "CPU Saturation %",
            "binary": { "left": "CPU Saturation %", "operator": "*", "right": "100" },
            "mode": "binary"
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Memory Saturation %",
            "binary": { "left": "Memory Used", "operator": "/", "right": "Memory Limit" },
            "mode": "binary"
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Memory Saturation %",
            "binary": { "left": "Memory Saturation %", "operator": "*", "right": "100" },
            "mode": "binary"
          }
        }
      ]
